<div x-show="$store.modals['{{ modalID }}'].open" x-cloak class="fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex justify-center min-h-screen pt-4 px-4 pb-20 text-center items-start lg:items-end sm:block sm:p-0">
    {# Grey overlay #}
    <div x-show="$store.modals['{{ modalID }}'].open" x-transition.opacity @click="$store.modals.toggleModal('{{ modalID }}')" class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>

    <!-- This element is to trick the browser into centering the modal contents. -->
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

    {# Actual modal box #}
    <div x-show="$store.modals['{{ modalID }}'].open" x-transition:enter.duration.600ms x-transition:leave class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle lg:max-w-2xl sm:w-full sm:p-6">
      <div>
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full">
          <!-- Heroicon name: outline/check -->
          <image src="assets/logo.png" />
        </div>
        <div class="mt-3 text-center sm:mt-5">
        {# Title #}
          <h3 x-text="$store.modals['{{ modalID }}'].title" class="text-2xl leading-6 font-medium text-gray-900" id="modal-title"></h3>
          <div class="mt-2">
          {# Content #}
            <p x-html="$store.modals['{{ modalID }}'].content" class="text-lg text-gray-500"></p>
          </div>
        </div>
      </div>
      <div class="mt-5 sm:mt-6">
      {# Button #}
        <button type="button" @click="$store.modals.toggleModal('{{ modalID }}')" class="inline-flex justify-center w-full rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:text-sm">
          Got it!
        </button>
      </div>
    </div>
  </div>
</div>
